{
  "name": "bitfocus-telemetry-bridge",
  "version": "0.1.0",
  "description": "State-first integration hub for Bitfocus Companion and custom applications",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "telemetry-bridge": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:contract": "vitest run tests/contract",
    "test:integration": "vitest run tests/integration",
    "test:resilience": "vitest run tests/resilience",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "validate:config": "tsx src/tools/validate/index.ts",
    "replay": "tsx src/tools/replay/index.ts",
    "inspect": "tsx src/tools/inspect/index.ts",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "bitfocus",
    "companion",
    "telemetry",
    "broadcast",
    "integration",
    "websocket",
    "state-machine"
  ],
  "author": "THAST",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "pino": "^9.6.0",
    "prom-client": "^15.1.3",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
